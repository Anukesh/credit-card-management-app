{
  "version": 2,
  "rewrites": [{ "source": "/((?!api/).*)", "destination": "/index.html" }],
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
